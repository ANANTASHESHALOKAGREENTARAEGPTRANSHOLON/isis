{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Restful Objects"
  },
  "paths": {
    "/": {
      "get": {
        "description": "Home page",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "required": [
                "links"
              ],
              "properties": {
                "links": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/LinkRepresentation"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/services": {
      "get": {
        "description": "Services",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "required": [
                "value",
                "links"
              ],
              "properties": {
                "value": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/LinkRepresentation"
                  }
                },
                "links": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/LinkRepresentation"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/services/SimpleObjects": {
      "get": {
        "description": "SimpleObjects service",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/ServiceRepresentation"
            }
          }
        }
      }
    },
    "/services/SimpleObjects/actions/findByName": {
      "get": {
        "description": "SimpleObjects findByName action",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/ActionPromptRepresentation"
            }
          }
        }
      }
    },
    "/services/SimpleObjects/actions/findByName/invoke": {
      "get": {
        "description": "SimpleObjects findByName invocation result",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json;profile=\"urn:org.restfulobjects/repr-types/action-result\"",
          "application/json;profile=\"urn:org.apache.isis/v1\"",
          "application/json;profile=\"urn:org.apache.isis/v1\";suppress=\"true\""
        ],
        "responses": {
          "200": {
            "description": "All objects matching name",
            "schema": {
              "$ref": "#/definitions/ActionInvocationRepresentationOfList"
            }
          }
        }
      }
    },
    "/objects/simple.SimpleObject/{id}": {
      "get": {
        "description": "representation of simple.SimpleObject",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string"
          }
        ],
        "produces": [
          "application/json;profile=\"urn:org.restfulobjects/repr-types/object\"",
          "application/json;profile=\"urn:org.apache.isis/v1\";repr-type=\"object\""
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/ObjectRepresentation"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ServiceRepresentation": {
      "type": "object",
      "required": [
        "links",
        "extensions",
        "title",
        "serviceId"
      ],
      "properties": {
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LinkRepresentation"
          }
        },
        "extensions": {
          "$ref": "#/definitions/ServiceOrObjectExtensionsRepresentation"
        },
        "title": {
          "type": "string"
        },
        "serviceId": {
          "type": "string"
        },
        "members": {
          "type": "object",
          "required": [
            "listAll",
            "findByName",
            "create"
          ],
          "properties": {
            "listAll": {
              "$ref": "#/definitions/ActionRepresentation"
            },
            "findByName": {
              "$ref": "#/definitions/ActionRepresentation"
            },
            "create": {
              "$ref": "#/definitions/ActionRepresentation"
            }
          }
        }
      }
    },
    "ObjectRepresentation": {
      "type": "object",
      "required": [
        "links",
        "extensions",
        "title",
        "domainType",
        "instanceId",
        "members"
      ],
      "properties": {
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LinkRepresentation"
          }
        },
        "extensions": {
          "$ref": "#/definitions/ServiceOrObjectExtensionsRepresentation"
        },
        "title": {
          "type": "string"
        },
        "domainType": {
          "type": "string"
        },
        "instanceId": {
          "type": "string"
        },
        "members": {
          "type": "object",
          "required": [
            "name",
            "versionSequence",
            "downloadJdoMetadata",
            "updateName"
          ],
          "properties": {
            "name": {
              "type": "object",
              "required": [
                "id",
                "memberType",
                "links",
                "value",
                "extensions"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "memberType": {
                  "type": "string",
                  "default": "property"
                },
                "links": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/LinkRepresentation"
                  }
                },
                "value": {
                  "type": "string"
                },
                "disabledReason": {
                  "type": "string"
                },
                "extensions": {
                  "type": "object"
                }
              }
            },
            "versionSequence": {
              "type": "object",
              "required": [
                "id",
                "memberType",
                "links",
                "value",
                "format",
                "extensions"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "memberType": {
                  "type": "string",
                  "default": "property"
                },
                "links": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/LinkRepresentation"
                  }
                },
                "value": {
                  "type": "integer"
                },
                "format": {
                  "type": "string"
                },
                "disabledReason": {
                  "type": "string"
                },
                "extensions": {
                  "type": "object"
                }
              }
            },
            "downloadJdoMetadata": {
              "$ref": "#/definitions/ActionRepresentation"
            },
            "updateName": {
              "$ref": "#/definitions/ActionRepresentation"
            }
          }
        }
      }
    },
    "ActionPromptRepresentation": {
      "type": "object",
      "required": [
        "id",
        "memberType",
        "links",
        "extensions",
        "parameters"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "memberType": {
          "type": "string"
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LinkRepresentation"
          }
        },
        "extensions": {
          "type": "object",
          "required": [
            "actionType",
            "actionSemantics"
          ],
          "properties": {
            "actionType": {
              "type": "string"
            },
            "actionSemantics": {
              "type": "string",
              "enum": [
                "safe",
                "idempotent",
                "non_idempotent"
              ]
            }
          }
        },
        "parameters": {
          "type": "object",
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "$ref": "#/definitions/ActionParameterRepresentation"
            }
          }
        }
      }
    },
    "ServiceOrObjectExtensionsRepresentation": {
      "type": "object",
      "required": [
        "oid",
        "isService",
        "isPersistent"
      ],
      "properties": {
        "oid": {
          "type": "string"
        },
        "isService": {
          "type": "boolean"
        },
        "isPersistent": {
          "type": "boolean"
        }
      }
    },
    "ActionRepresentation": {
      "type": "object",
      "required": [
        "id",
        "memberType",
        "links"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "memberType": {
          "type": "string",
          "default": "action"
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LinkRepresentation"
          }
        }
      }
    },
    "ActionParameterRepresentation": {
      "type": "object",
      "required": [
        "num",
        "id",
        "name",
        "description"
      ],
      "properties": {
        "num": {
          "type": "integer"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "ActionInvocationRepresentationOfList": {
      "type": "object",
      "required": [
        "links",
        "resulttype",
        "result"
      ],
      "properties": {
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LinkRepresentation"
          }
        },
        "resulttype": {
          "type": "string",
          "default": "list"
        },
        "result": {
          "type": "object",
          "required": [
            "value",
            "links",
            "extensions"
          ],
          "properties": {
            "value": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/LinkRepresentation"
              }
            },
            "links": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/LinkRepresentation"
              }
            },
            "extensions": {
              "type": "object"
            }
          }
        }
      }
    },
    "LinkRepresentation": {
      "type": "object",
      "required": [
        "rel",
        "href",
        "method"
      ],
      "properties": {
        "rel": {
          "type": "string",
          "description": "relationship of this Link"
        },
        "href": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "type": {
          "type": "string"
        },
        "arguments": {
          "type": "object"
        }
      }
    }
  }
}